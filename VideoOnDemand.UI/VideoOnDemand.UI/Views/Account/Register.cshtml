@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel-register-panel">
            <div class="panel-body register-panel-body">
                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <h4 id="register-panel-heading">Create a new account.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <div class="icon-addon">

                            <input asp-for="Email" class="form-control" placeholder="Enter Your Email" />
                            <label for="Email" class="glyphicon glyphicon-envelope"></label>

                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="icon-addon">
                            <input asp-for="Password" class="form-control" placeholder="Enter Your Password" />
                            <label for="Email" class="glyphicon glyphicon-lock"></label>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    <div class="form-group">
                        <div class="icon-addon">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Enter Your Email" />
                            <label for="Email" class="glyphicon glyphicon-lock"></label>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Register</button>
</form>
            </div>
            </div>
        
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
